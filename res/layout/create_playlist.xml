<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txtPlaylistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txtPlaylistnameHint"
        android:padding="10sp" >

        <requestFocus />
    </EditText>

    <SeekBar
        android:id="@+id/sbPlaylistDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="180"
        android:padding="10sp"
        android:progress="30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvPlaylistDuration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="10sp"
            android:text="@string/tvPlaylistDuration" />

        <TextView
            android:id="@+id/tvMinutes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="10sp"
            android:text="@string/tvMinutes" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCreatePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="@string/btnCreatePlaylist" />

    <TextView
        android:id="@+id/tvPlaylistFinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>